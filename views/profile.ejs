<!doctype html> 
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Profile Page | Pinterest</title>
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
  </head>
  <body>
    <main class="profile-wrapper container">
      <section class="profile-card shadow-sm rounded-4 p-4">
        <div class="profile-picture-wrapper mx-auto mb-3">
          <img src="https://images.unsplash.com/photo-1543610892-0b1f7e6d8ac1?q=80&w=1856&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Profile Picture" class="profile-picture rounded-circle" />
        </div>
        <h2 class="name text-center fw-semibold mb-1"><%= user.fullname %></h2>
        <h3 class="username text-center text-muted mb-3">@<%= user.username %></h3>
        <p class="tagline text-center fst-italic text-secondary mb-3">Lorem, ipsum dolor sit amet consectetur adipisicing.</p>
        <p class="description text-center text-muted mb-4">Lorem ipsum dolor sit amet consectetur adipisicing elit. Amet dolorum voluptatum quo.</p>
        <div class="text-center mb-4">
          <a href="/logout" class="btn btn-danger btn-lg rounded-pill px-5">Log out</a>
        </div>
        <form action="/upload" method="post" enctype="multipart/form-data" class="upload-form d-flex flex-column gap-3">
          <input type="text" name="filecaption" placeholder="Caption goes here" class="form-control rounded-pill" />
          <input type="file" name="file" class="form-control" />
          <button type="submit" class="btn btn-primary rounded-pill mt-2">Upload</button>
        </form>
      </section>
    </main>

    <section class="posts-container container mt-5">
      <div class="masonry-grid">
        <% user.posts.forEach(function(post){ %>
          <div class="masonry-item">
            <img src="/images/uploads/<%= post.image %>" alt="Post Image" />
            <h5 class="image-text"><%= post.imageText %></h5>
          </div>
        <% }) %>
      </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  </body>
</html>
